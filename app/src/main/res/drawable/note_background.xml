<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#333333" /> <!-- Dark gray background -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#FFC107" /> <!-- Amber border -->
</shape>
